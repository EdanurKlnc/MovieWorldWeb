@model RegisterViewModels
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_RegisterLayout.cshtml";

}
<div class="register">
    <h2 class="active"> Kayıt Ol </h2>
    <form asp-controller="Account" asp-action="Register">

        <input type="text" class="text" name="username" asp-for="Username">
        <span>Kullanıcı Adı</span>

        <br>

        <br>
        <input type="text" class="text" name="surname" asp-for="Surname">
        <span>Kullanıcı Soyadı</span>

        <br>

        <br>
        <input type="email" class="text" name="email" asp-for="Email">
        <span>Email Adresi</span>

        <br>

        <br>

        <input type="password" class="text" name="password" asp-for="Password">
        <span>Şifre</span>
        <br>


        <button class="signup">
            Kayıt Ol
        </button>

        <hr>
        <a asp-controller="Account" asp-action="Login">Mevcut bir hesabınız var mı?</a>

        <br>
        <br>
        <a class="kayit" asp-controller="Home" asp-action="Index" style="font-size:20px">Anasayfaya Dön</a>
    </form>

</div>


